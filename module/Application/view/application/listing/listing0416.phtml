use Zend\Filter\Callback;
use Zend\Filter\Digits;
use Zend\Filter\Word\SeparatorToCamelCase;
use Zend\I18n\Filter\Alnum;
use Zend\I18n\Filter\Alpha;

$value = 'Heute bekam Luigi die 4. Bestellung: 2x Pizza Salami';

